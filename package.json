{
  "name": "translation-assistant",
  "version": "0.0.2",
  "description": "Translation assistant for perseus exercises",
  "main": "lib/translation-assistant.js",
  "scripts": {
    "lint": "eslint src tests",
    "test": "mocha --require babel-core/register tests",
    "test:coverage:codecov": "nyc mocha --report lcovonly -- -R spec --require babel-core/register tests",
    "test:coverage": "nyc mocha --report=text -- -R spec --require babel-core/register tests",
    "build:add": "git add lib/",
    "build": "babel --loose all src --out-dir lib",
    "watch_test": "mocha --watch --watch-extensions js --require babel-core/register tests",
    "watch_build": "babel --loose all --watch src --out-dir lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Khan/translation-assistant"
  },
  "author": "Kevin Barabash <kevinbarabash@khanacademy.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Khan/translation-assistant/issues"
  },
  "homepage": "https://github.com/Khan/translation-assistant",
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-core": "^5.8.25",
    "eslint": "^7.10.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2"
  },
  "pre-commit": [
    "lint",
    "build",
    "test",
    "build:add"
  ]
}
